<div class="container" >
<div class="btn btn-light">
<%= link_to "Back", cocktails_path %>
<%= link_to "Edit", edit_cocktail_path(@cocktail) %>
<%= link_to 'Add a description', new_cocktail_dose_path(@cocktail) %>
</div>
<br>



<h1>cocktail</h1>

<p>Name: <%= @cocktail.name %></p>

  <% if @cocktail.photo.present? %>
    <%= cl_image_tag @cocktail.photo.key, width: 400, crop: :fill %>
  <% else %>
    <%= image_tag 'placeholder.png', width: 400 %>
  <% end %>

<ul class="list-group">
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item"> Dose: <%= dose.description %></li>
    <li class="list-group-item"> Ingredient: <%= dose.ingredient.name %></li>
    <%= link_to 'Delete a dose', cocktail_dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }%></li>

  <% end %>
</ul>


</div>
